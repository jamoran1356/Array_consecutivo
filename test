    $len = count($sequence);
    $contador = 0;
    $y =0;
    if($len==1){
       return true;    
    } else {
            for ($i=0; $i<=$len-2;$i++){
                if($i==0){
                    if($sequence[$i]>$sequence[$i+1]){
                        unset($sequence[$i]);
                        $contador = $contador +1;
                    }
                }
                if($sequence[$i]<$sequence[$i+1]){
                } else {
                        unset($sequence[$i+1]);
                        $contador = $contador + 1;
                        $ln = count($sequence);
                        $sequence = array_unique($sequence);
                        $lx = count($sequence);
                                if($lx==$ln){
                                        foreach($sequence as $p=>$x){
                                            $new[]=$x;
                                        }
                                        for($t=0;$t<=$lx-2;$t++){
                                            if($new[$t]<$new[$t+1]){
                                            }else{
                                                $contador = $contador +1;
                                            }
                                        }
                                    
                                } else {
                                    $contador = $contador +1;
                                }
                        }

                }
            }
                   
if($contador>1){
    return false;
}else {
    return true;
